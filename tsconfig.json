{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmitOnError": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "preserveWatchOutput": true,
    "resolveJsonModule": true,
    "outDir": "lib",
    "rootDir": "src",
    "strict": true,
    "strictNullChecks": true,
    "target": "ES2020",
    "types": [],
    "baseUrl": "./src",
    "lib": [
      "dom",
      "es2020",
      "es2020.intl"
    ],
    "paths": {
      "helpers/*": [
        "helpers/*"
      ]
    }
  },
  "include": [
    "src/**/*"
  ]
}